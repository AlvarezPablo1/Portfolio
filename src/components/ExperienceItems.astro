---
import IconButton from '../assets/icons/IconButton.astro'

interface Props {
  date: string,
  project: string,
  description: string,
  tecnologies?: string[]
}

const { date, project, description, tecnologies} = Astro.props
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
  <time class="mb-1 text-base font-normal leading-none text-gray-400">{date}</time>
  <nav class="flex gap-x-3 text-sm">
    {
      tecnologies?.map(tecnologies =>
      <IconButton padding="px-2 py-px">
        {tecnologies}
    </IconButton>
      )
    }
  </nav>
  
  <h3 class="text-lg font-bold text-white ">{project}</h3>
  <p class="mb-4 text-base font-normal text-gray-400">{description}</p>