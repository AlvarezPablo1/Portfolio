---
import Icon from '../button/Icon.astro'

interface Props {
  date: string,
  project: string,
  description: string,
  tecnologies?: string[]
}

const { date, project, description, tecnologies} = Astro.props
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
  <time class="mb-1 text-base font-normal leading-none text-yellow-200/80">{date}</time>
  <nav class="flex flex-wrap gap-x-3 gap-y-2 py-3 text-sm">
    {
      tecnologies?.map(tecnologies =>
      <Icon padding="px-2 py-px">
        {tecnologies}
      </Icon>
      )
    }
  </nav>
  
  <h3 class="text-lg font-bold text-blue-400/80 ">{project}</h3>
  <p class="mb-4 text-base font-normal text-gray-400 text-pretty">{description}</p>